# API Settings
API_TITLE="Nedlia Backend API"
API_DESCRIPTION="Clean Architecture Backend with FastAPI and MongoDB"
API_VERSION="0.1.0"
API_DEBUG=true

# MongoDB Settings
DB_URL="mongodb://localhost:27017"
DB_NAME="nedlia"
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=10
DB_MAX_IDLE_TIME_MS=30000
DB_CONNECT_TIMEOUT_MS=20000
DB_SERVER_SELECTION_TIMEOUT_MS=30000

# Redis Settings (for caching)
REDIS_URL="redis://localhost:6379"
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=30

# Security Settings
SECURITY_SECRET_KEY="your-secret-key-here"
SECURITY_ALGORITHM="HS256"
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_PASSWORD_HASH_ROUNDS=12

# Logging Settings
LOG_LEVEL="INFO"
LOG_JSON_LOGS=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000"]

# Feature Flags
METRICS_ENABLED=true
TRACING_ENABLED=true
